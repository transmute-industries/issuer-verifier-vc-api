{
  "name": "vc-http-api",
  "author": "Orie Steele",
  "module": "dist/vc-http-api.esm.js",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prestart": "npm run build",
    "start": "node run.js",
    "watch": "tsdx watch",
    "build": "tsdx build",
    "pretest": "export TS_JEST_DISABLE_VER_CHECKER=true",
    "test": "tsdx test --testPathIgnorePatterns=./suites",
    "pretest:report:run": "npm run compile:suites",
    "test:report": "node ./runSuites.js",
    "posttest:report": "npm run augment-report",
    "compile:suites": "rm -rf ./suites && tsc --resolveJsonModule ./src/suites/**/*  --outDir .",
    "augment-report": "node ./scripts/augment-report.js",
    "lint": "tsdx lint src --fix",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/vc-http-api.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/vc-http-api.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.0",
    "@types/supertest": "^2.0.10",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-plugin-jest": "^24.1.0",
    "size-limit": "^4.9.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.5.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "4.0.5"
  },
  "dependencies": {
    "@mattrglobal/bbs-signatures": "^0.5.0",
    "@mattrglobal/jsonld-signatures-bbs": "^0.8.0",
    "@transmute/did-key-bls12381": "^0.2.1-unstable.35",
    "@transmute/ed25519-signature-2018": "^0.1.1-unstable.12",
    "@transmute/jsonld-document-loader": "^0.2.0",
    "@transmute/vc.js": "^0.2.1-unstable.7",
    "axios": "^0.21.1",
    "fastify": "^3.9.1",
    "fastify-auth0-verify": "^0.4.2",
    "fastify-cors": "^5.0.0",
    "fastify-jwt": "^2.3.0",
    "fastify-plugin": "^3.0.0",
    "fastify-swagger": "^3.5.0",
    "jest": "^26.6.3",
    "jest-html-reporters": "^2.1.2",
    "node-fetch": "^2.6.1",
    "require-all": "^3.0.0",
    "slugify": "^1.4.7"
  }
}
